<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ActionBarStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:layout_weight">@dimen/item_weight</item>
        <item name="android:layout_width">@dimen/item_0dp_width</item>
        <item name="android:paddingStart">@dimen/item_padding_10dp</item>
        <item name="android:paddingLeft">@dimen/item_padding_10dp</item>
        <item name="android:paddingRight">@dimen/item_padding_10dp</item>
        <item name="android:paddingEnd">@dimen/item_padding_10dp</item>
        <item name="android:layout_height">@dimen/item_height_30dp</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="HomeScreenTextView" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">@dimen/item_width_120dp</item>
        <item name="android:layout_height">@dimen/item_width_120dp</item>
        <item name="android:layout_marginEnd">@dimen/item_padding_5dp</item>
        <item name="android:layout_marginLeft">@dimen/item_padding_5dp</item>
        <item name="android:layout_marginRight">@dimen/item_padding_5dp</item>
        <item name="android:layout_marginStart">@dimen/item_padding_5dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="HomeScreenTextViewTitle" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_height_30dp</item>
        <item name="android:layout_marginEnd">@dimen/item_padding_5dp</item>
        <item name="android:layout_marginLeft">@dimen/item_padding_5dp</item>
        <item name="android:layout_marginRight">@dimen/item_padding_5dp</item>
        <item name="android:layout_marginStart">@dimen/item_padding_5dp</item>
        <item name="android:layout_marginTop">@dimen/item_padding_10dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="PlayerButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

</resources>
